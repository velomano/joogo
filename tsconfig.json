{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@joogo/*": ["packages/*/src"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", "build"]
}
